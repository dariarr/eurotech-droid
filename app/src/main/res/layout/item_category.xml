<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/one_dp"
    android:background="@color/white"
    android:padding="@dimen/fifteen_dp">

    <com.martoff.esmart.utils.RobotoTextViewLight
        android:id="@+id/tv_cat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_cat_count"
        android:layout_toStartOf="@+id/tv_cat_count"
        android:textSize="@dimen/twenty_sp" />

    <com.martoff.esmart.utils.RobotoTextViewLight
        android:id="@+id/tv_cat_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_cat_indicator"
        android:layout_toStartOf="@+id/iv_cat_indicator"
        android:paddingEnd="@dimen/fifteen_dp"
        android:paddingRight="@dimen/fifteen_dp" />

    <ImageView
        android:id="@+id/iv_cat_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
</RelativeLayout>