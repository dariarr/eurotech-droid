<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_motors"
    android:layout_width="@dimen/one_sixty_dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/three_dp"
    app:cardCornerRadius="@dimen/three_dp"
    app:cardElevation="@dimen/five_dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">
        <!--ImageView-->
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/iv_recent_item_motors"
            android:layout_width="@dimen/recent_image_width"
            android:layout_height="@dimen/recent_image_height"
            android:padding="@dimen/two_dp"
            android:src="@drawable/logo" />

        <View
            android:id="@+id/line_separator_motors"
            style="@style/image_separator"
            android:layout_width="@dimen/recent_image_width"
            android:layout_height="1dp"
            android:layout_below="@+id/iv_recent_item_motors" />

        <com.martoff.esmart.utils.RobotoTextViewLight
            android:id="@+id/tv_recent_item_name_motors"
            android:layout_width="@dimen/recent_image_width"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_separator_motors"
            android:layout_marginTop="@dimen/two_dp"
            android:lines="3"
            android:text="sadf " />

        <com.martoff.esmart.utils.RobotoTextViewLight
            android:id="@+id/tv_item_price_motors"
            android:layout_width="@dimen/recent_image_width"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_recent_item_name_motors"
            android:text="Price"
            android:textSize="@dimen/twenty_sp" />

        <com.martoff.esmart.utils.RobotoTextViewLight
            android:id="@+id/tv_buy_item_motors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_price_motors"
            android:text="BUY NOW" />

        <ImageView
            android:id="@+id/iv_recent_item_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_item_price_motors" />

    </RelativeLayout>
</android.support.v7.widget.CardView>